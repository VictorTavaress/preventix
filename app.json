{
  "expo": {
    "name": "preventix",
    "slug": "preventix",
    "version": "1.0.2",
    "orientation": "portrait",
    "icon": "./assets/images/P.png",
    "scheme": "myapp",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "owner": "victortavares",
    "splash": {
      "image": "./assets/images/logotipopreventix.png",
      "resizeMode": "contain",
      "backgroundColor": "#0D0D1B"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.preventix.app",
      "buildNumber": "2.0.1",
      "infoPlist": {
        "NSCameraUsageDescription": "Este aplicativo utiliza a câmera para capturar imagens técnicas de equipamentos durante inspeções em campo. As fotos são incluídas automaticamente em relatórios técnicos em PDF.",
        "NSPhotoLibraryUsageDescription": "Este aplicativo acessa a biblioteca de fotos para permitir o upload de imagens já existentes, que serão utilizadas em relatórios técnicos.",
        "NSDocumentsFolderUsageDescription": "Este aplicativo salva relatórios técnicos em PDF no dispositivo para acesso local, compartilhamento e upload seguro para a nuvem.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "package": "com.preventix.app",
      "versionCode": 1,
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "MANAGE_EXTERNAL_STORAGE"
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/IconLogobg.png",
        "backgroundColor": "#0D0D1B"
      }
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/IconLogobg.png"
    },
    "plugins": [
      "expo-router",
      "expo-asset",
      "expo-secure-store"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "8524e934-f28f-4f5b-81d8-aef651598e95"
      }
    }
  }
}